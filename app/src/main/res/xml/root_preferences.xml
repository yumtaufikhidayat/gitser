<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/tvLanguage">

        <ListPreference
            app:icon="@drawable/ic_language"
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="reply"
            app:title="@string/tvChooseLanguage"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/tvNotification">

        <SwitchPreferenceCompat
            app:icon="@drawable/ic_notifications"
            app:key="sync"
            app:title="@string/tvNotificationTitle" />

    </PreferenceCategory>

</PreferenceScreen>