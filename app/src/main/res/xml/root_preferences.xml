<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/tvLanguage">

        <ListPreference
            app:key="@string/keyLanguage"
            app:icon="@drawable/ic_language"
            app:defaultValue="Indonesia"
            app:entries="@array/arrayLanguages"
            app:entryValues="@array/arrayLanguagesValues"
            app:title="@string/tvChooseLanguage"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/tvNotification">

        <CheckBoxPreference
            app:key="@string/keyNotifications"
            app:icon="@drawable/ic_notifications"
            app:title="@string/tvNotificationTitle" />

    </PreferenceCategory>

</PreferenceScreen>